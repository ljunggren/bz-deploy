server {
    listen 80;
    server_name {{ item.name }}.boozang.com;

    root {{ directory }}/{{ item.name }}/build;  # Adjust the subdirectory as needed
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        internal;
    }
}
